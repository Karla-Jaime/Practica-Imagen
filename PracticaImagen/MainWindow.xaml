<Window x:Class="PracticaImagen.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PracticaImagen"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Image  Name="imgHusky" Source="uno.jpg" Stretch="UniformToFill" Grid.Row="0"></Image>
        <Button Click="btnCambiarImagen_Click" Name="btnCambiarImagen" Grid.Row="1">Cambiar Imagen</Button>
    </Grid>
</Window>
